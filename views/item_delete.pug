extends layout

block content

  h1 #{title}: #{item.name}
  
  p #[strong Category:] 
    a(href=item.category.url) #{item.category.name}
  p #[strong Description:] #{item.description}
  p #[strong Price:] #{item.price}
  p #[strong Stock:] #{item.stock} 

  hr
    
  form(method='POST' action='')
    div.form-group
      input#id.form-control(type='hidden',name='id', required='true', value=item._id )

    button.btn.btn-primary(type='submit') Delete